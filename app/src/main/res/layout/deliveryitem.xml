<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="15dp"
        android:outlineSpotShadowColor="@color/textColor"
        android:layout_marginEnd="8dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/cusname"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/yeonsung_regular"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="#B3B3B3"
                android:textSize="16sp"
                android:text="Payment"
                app:layout_constraintStart_toStartOf="@id/cusname"
                app:layout_constraintTop_toBottomOf="@+id/cusname"/>
            <TextView
                android:id="@+id/nr"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="#FF3B3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Not Received"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/pay"
                app:layout_constraintTop_toBottomOf="@id/pay"/>
           <TextView
               android:id="@+id/dd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/lato_bold"
               android:text="Delivered"
               android:textColor="@color/black"
               android:layout_marginEnd="16dp"
               android:layout_marginTop="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:cardCornerRadius="22dp"
                android:backgroundTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/dd"
                app:layout_constraintStart_toStartOf="@id/dd"
                app:layout_constraintTop_toBottomOf="@id/dd"/>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>